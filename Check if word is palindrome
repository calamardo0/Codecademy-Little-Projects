
let inputPhrase = prompt('Type a word or phrase here:')
inputPhrase = inputPhrase.toLowerCase()
inputPhrase = inputPhrase.replace(/\s/g,'')

var eachChar = inputPhrase.split('')
var reverseChar = inputPhrase.split('').reverse()

if (eachChar.join() === reverseChar.join()) {
  console.log('Yes, palindrome')
} else {
  console.log('Not a palindrome')
}


